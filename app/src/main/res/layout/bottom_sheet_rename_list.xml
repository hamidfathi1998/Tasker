<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/curved_bg_bottom_sheet"
    android:orientation="vertical"
    android:padding="15dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="Enter new name"
        android:textColor="@color/colorBlue"
        android:textSize="19dp" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/new_list_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Enter here"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:textColorHint="@color/colorHints"
        android:textSize="19sp"
        app:backgroundTint="@color/colorHints" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/rename_list_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="35dp"
        android:layout_marginRight="20dp"
        android:text="RENAME LIST" />

</LinearLayout>